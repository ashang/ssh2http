#!/usr/bin/env ruby

lib = File.expand_path('../../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)
require 'ssh2http'

die "Only ssh allowed." unless ENV['SSH_CONNECTION']
die "Please provide a destination url." unless ARGV[0] && ARGV[0].length > 0

Ssh2http.new(ARGV[0], *ENV['SSH_ORIGINAL_COMMAND'].to_s.split).run!
