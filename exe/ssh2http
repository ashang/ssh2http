#!/usr/bin/env ruby

lib = File.expand_path('../../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)
require 'ssh2http'

unless ENV['SSH_CONNECTION']
  puts "Only ssh allowed."
  exit 1
end

unless ARGV[0] && ARGV[0].length > 0
  puts "Please provide a destination url."
  exit 1
end

Ssh2http.new(ARGV[0], ENV['SSH_ORIGINAL_COMMAND']).run!
